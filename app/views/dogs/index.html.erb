<div id="dogs_app">
  <h1>New Dog</h1>
<%= render 'form' %>



<h1>Listing dogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.age %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path %>

<h1>Listing Dogs via Backbone </h1>

<table id="dog_table">
  <tr>
    <th>Name</th>
    <th>Age</th>
  </tr>
</table>

</div>

<script id="dog_template" type ="text/html">
  <td>{{name}}</td>
  <td>{{age}}</td>
</script>
